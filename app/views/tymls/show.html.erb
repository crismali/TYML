<div class="container">
<h1 class="logo-send">
    <%= link_to "TYML", tymls_url %>
  <h1>

<h2 class="tagline-send"><strong>
<% if @current_user.sent_tymls.count == 1 %>
  Congratulations on sending your first TYML!
<% else %>
  Congratulations on sending another TYML!
<% end %>
</strong></h2>

<div class="tyml-container group">
  <% unless @tyml.receiver.blank? %>
  <div class="tyml-profile-image"><%= image_tag @tyml.receiver.profile_pic %></div>
  <% else %>
  <div class="tyml-profile-image"><%= image_tag asset_path('default_avatar.png') %></div>
  <% end %>
  <p class="tyml-user"><span class="tyml-copy">You thought</span>

  <% if @tyml.receiver %>
    <%=  @tyml.receiver.name %>
  <% else %>
    <%= @tyml.receiver_email %>
  <% end %>

<span class="tyml-copy">might like&hellip;</span></p>
  <div class="tyml-content-wrap">
    <p class="tyml-url"><%=  link_to @tyml.url, @tyml.url, :target => '_blank' %></p>
    <% unless @tyml.note.blank? %>
      <p class="tyml-note"><%=  @tyml.note %></p>
    <% end %>
    <div class="comments-container">
      <div id="tyml_comments_<%= @tyml.id %>">
        <% @tyml.comments.each do |comment| %>
          <div class="single-comment-wrap group">
            <div class="comment-profile-image"><%= image_tag comment.user.profile_pic %></div>
              <p class="comment-note">
              <span class="user-name"><%= comment.user.name %></span> &mdash; <%= comment.comment_text %>
            </p>
          </div>
        <% end %>
    </div>
      <%= render 'comment_form' %>
    </div>
  </div>
</div>
<br />
<h3>
  Don't stop now! <a href="#share" data-behavior="share-tyml">Share more content</a>.
</h3>



