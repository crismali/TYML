<%= form_for @tyml do |f| %>
  <div class="note-form">
    <h3>Thought you might like&hellip;</h3>
    <%= f.hidden_field :sender_id, :value => @current_user.id %>

    <%= f.text_field :url, :placeholder => "Enter URL here" %>
    <%= f.email_field :receiver_email, :placeholder => "Email" %>
    <%= f.text_area :note, :placeholder => "Note (optional)", :rows => "2" %>
    <div class="input-container">
      <%= f.submit "Share" %>
    </div>
  </div>

<% end -%>

